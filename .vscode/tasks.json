{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "out",
                "src/*"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "out",
                "Project"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "build docs",
            "type": "shell",
            "options": {"cwd": "docs"},
            "command": "javadoc",
            "args": [
                
                "../src/*"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "docs",
            "type": "shell",
            "options": {"cwd": "docs"},
            "command": "jwebserver",
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
    ]
}